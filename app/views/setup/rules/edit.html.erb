<% title "Setup Wizard" %>
<% nav_section :settings %>
<% jumbotron do %>
  <h1>Setup Wizard</h1>
  <p>Step 6: Rules</p>
<% end %>

<p>The Github Connector decides who can access Github.com based on a list of rules.  Configure the rules below.</p>

<%= form_tag({action: :update}, method: :put, class: 'form-horizontal max-col-sm') do %>
  <% if @error %>
    <div class="alert alert-danger"><%= @error %></div>
  <% end %>

  <h2>Rules</h2>
  <%= render 'settings/rules' %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag('Next', class: 'btn btn-default btn-primary') %>
    </div>
  </div>
<% end %>
